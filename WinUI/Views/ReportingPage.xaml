<Page
    x:Class="WinUI.Views.ReportingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:WinUI.Controls"
    xmlns:models="using:WinUI.Models"
    mc:Ignorable="d">

    <Grid Padding="24" RowDefinitions="Auto,Auto,*" RowSpacing="16">
        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="Raporlama" Style="{StaticResource PageTitleTextStyle}" />
            <controls:BusyIndicator IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Message="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <DatePicker Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}" />
            <DatePicker Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}" />
            <Button Content="Raporu Getir" Command="{x:Bind ViewModel.LoadReportsCommand}" />
            <Button Content="Excel'e Aktar" Command="{x:Bind ViewModel.ExportToExcelCommand}" />
        </StackPanel>

        <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModel.Measurements, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ApiDataResultDto">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock Text="{x:Bind ReadTime, Mode=OneWay, StringFormat='{}{0:G}'}" Width="180" />
                        <TextBlock Text="{x:Bind KOi, Mode=OneWay, StringFormat='KOÄ°: {0:F2}'}" />
                        <TextBlock Text="{x:Bind Debi, Mode=OneWay, StringFormat='Debi: {0:F2}'}" />
                        <TextBlock Text="{x:Bind pH, Mode=OneWay, StringFormat='pH: {0:F2}'}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
