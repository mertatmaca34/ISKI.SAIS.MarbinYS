<Page
    x:Class="WinUI.Views.MailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:WinUI.Controls"
    xmlns:models="using:WinUI.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid Padding="24" RowDefinitions="Auto,Auto,*" RowSpacing="16">
        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="E-Posta" Style="{StaticResource PageTitleTextStyle}" />
            <controls:BusyIndicator IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Message="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12">
            <Button Content="Ayarları Yükle" Command="{x:Bind ViewModel.LoadCommand}" />
            <Button Content="Ayarları Kaydet" Command="{x:Bind ViewModel.SaveSettingsCommand}" />
        </StackPanel>

        <Grid Grid.Row="2" ColumnDefinitions="*,2*" ColumnSpacing="24">
            <StackPanel Spacing="8">
                <TextBox Header="SMTP Sunucusu" Text="{x:Bind ViewModel.Settings.SmtpHost, Mode=TwoWay}" />
                <muxc:NumberBox Header="Port" Value="{x:Bind ViewModel.SmtpPortValue, Mode=TwoWay}" />
                <TextBox Header="Kullanıcı" Text="{x:Bind ViewModel.Settings.SmtpUser, Mode=TwoWay}" />
                <TextBox Header="Şifre" Text="{x:Bind ViewModel.Settings.SmtpPassword, Mode=TwoWay}" />
                <ToggleSwitch Header="SSL" IsOn="{x:Bind ViewModel.Settings.UseSsl, Mode=TwoWay}" />
            </StackPanel>

            <ListView Grid.Column="1" ItemsSource="{x:Bind ViewModel.Alarms, Mode=OneWay}" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:MailAlarmDto">
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <ToggleSwitch IsOn="{x:Bind IsActive, Mode=TwoWay}" Toggled="AlarmToggle_Toggled" />
                            <TextBlock Text="{x:Bind Name}" />
                            <TextBlock Text="{x:Bind Channel}" Foreground="{StaticResource AppSecondaryBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
