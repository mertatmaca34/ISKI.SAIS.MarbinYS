<Page
    x:Class="WinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:WinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Ayarlar" Style="{StaticResource PageTitleTextStyle}" />
                <controls:BusyIndicator IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Message="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
            </StackPanel>

            <StackPanel Spacing="12">
                <TextBlock Text="İstasyon" FontSize="20" FontWeight="SemiBold" />
                <TextBox Header="Kod" Text="{x:Bind ViewModel.Station.Code, Mode=TwoWay}" />
                <TextBox Header="Ad" Text="{x:Bind ViewModel.Station.Name, Mode=TwoWay}" />
                <TextBox Header="Adres" Text="{x:Bind ViewModel.Station.Address, Mode=TwoWay}" />
                <Button Content="İstasyonu Kaydet" Command="{x:Bind ViewModel.SaveStationCommand}" />
            </StackPanel>

            <StackPanel Spacing="12">
                <TextBlock Text="API Ayarları" FontSize="20" FontWeight="SemiBold" />
                <TextBox Header="Adres" Text="{x:Bind ViewModel.ApiEndpoint.ApiAddress, Mode=TwoWay}" />
                <TextBox Header="Kullanıcı" Text="{x:Bind ViewModel.ApiEndpoint.UserName, Mode=TwoWay}" />
                <TextBox Header="Şifre" Text="{x:Bind ViewModel.ApiEndpoint.Password, Mode=TwoWay}" />
                <Button Content="API Ayarlarını Kaydet" Command="{x:Bind ViewModel.SaveApiSettingsCommand}" />
            </StackPanel>

            <StackPanel Spacing="12">
                <TextBlock Text="Veritabanı" FontSize="20" FontWeight="SemiBold" />
                <TextBox Header="Sunucu" Text="{x:Bind ViewModel.DatabaseSettings.Server, Mode=TwoWay}" />
                <TextBox Header="Kimlik Doğrulama" Text="{x:Bind ViewModel.DatabaseSettings.Authentication, Mode=TwoWay}" />
                <TextBox Header="Kullanıcı" Text="{x:Bind ViewModel.DatabaseSettings.Username, Mode=TwoWay}" />
                <TextBox Header="Şifre" Text="{x:Bind ViewModel.DatabaseSettings.Password, Mode=TwoWay}" />
                <Button Content="Veritabanı Ayarlarını Kaydet" Command="{x:Bind ViewModel.SaveDatabaseSettingsCommand}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
